<!DOCTYPE html>
<html lang="en">
<head>
  <title>login</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
  <link rel="stylesheet" href="path/to/font-awesome/css/font-awesome.min.css">
</head>
<body>
    <div class="container">
        <h3 class="text-center m-3" style="color: coral;">Happy Shoping </h3>
        <a class="text-align-right btn btn-success" href="myModal" data-toggle="modal" data-target="#myModal" class="float-right btn btn-outline-primary mt-1">Add New Product</a>
        <table class="table table-bodered table-striped  table-dark">
            <thead class="text-primary">
                <tr>
                    <th>Sno</th>
                    <th>Item ID</th>
                    <th>Item Name</th>
                    <th>Model</th>
                    <th>Price</th>
                    <th>Offer Price</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
             
                    <% data.forEach((itemdata,count=0)=>{%>
                        <tr>
                        <td><%= ++count%></td>
                        <td><%= itemdata.itemid%></td>
                        <td><%= itemdata.itemname%></td>
                        <td><%= itemdata.info%></td>
                        <td><%= itemdata.price%></td>
                        <td><%= itemdata.offer%></td>
                 <td><a href="/cart/<%= itemdata.itemid%>/<%= itemdata.itemname%>/<%= itemdata.info%>/<%= itemdata.price%>/<%= itemdata.offer%>" type="button" class="btn btn-warning ">Add Cart</a></td>   
                </tr>
                 <%   }) %>

               
            </tbody>
        </table>
        <div class="container">
            <!-- Trigger the modal with a button -->

            <!-- Modal -->
            <div class="modal fade" id="myModal" role="dialog">
              <div class="modal-dialog">
              
                <!-- Modal content-->
                <div class="modal-content">
                  <div class="modal-header">
                    <h4 class="modal-title text-center">Add New Product</h4>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                   
                  </div>
                  <form action="/poduct" method="POST">
                  <div class="modal-body">
                    <div class="form-row">
                        <div class="col form-group">
                    
                            <label>Product ID</label>   
                              <input type="text" class="form-control" name="itemid" placeholder="Enter your Item Id" required>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="col form-group">
                            <label>Product Name</label>   
                              <input type="text" class="form-control" name="itemname" placeholder="Enter your Product Name" required>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="col form-group">
                            <label>Product Model</label>   
                              <input type="text" class="form-control" name="info" placeholder="Enter your Product Model" required>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="col form-group">
                            <label>Product Price</label>   
                              <input type="tel" class="form-control" name="price" placeholder="Enter your Product Price" required>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="col form-group">
                            <label>Offer Price</label>   
                              <input type="tel" class="form-control" name="offer" placeholder="Enter your Product Offer" required>
                        </div>
                    </div>
                  </div>
                  <div class="modal-footer">
                    <button class="btn btn-primary">Submit</button>
                    <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                  </div>
                </form>
                </div>
                
              </div>
            </div>
            
          </div>

    </div>
 
    
    </div> 

  
    </div>
</body>